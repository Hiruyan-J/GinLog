<% content_for :title,  t('.sign_up') %>
<%= page_heading %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex flex-col items-center gap-4 py-2" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field w-full md:w-8/12">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input input-primary w-full" %>
  </div>

  <div class="field w-full md:w-8/12">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: "input input-primary w-full" %>
  </div>

  <div class="field w-full md:w-8/12">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "input input-primary w-full" %>
  </div>

  <div class="field w-full md:w-8/12">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-primary w-full" %>
  </div>

  <div class="actions flex justify-center pt-2">
    <%= f.submit t('.sign_up'), class: "btn btn-primary" %>
  </div>
<% end %>

<section class="flex flex-col items-center gap-2 py-2">
  <%= render "devise/shared/links" %>
</section>
