<div id="<%= dom_id sake_log %>">
  <div class="my-5">
    <p class="font-medium mb-1"><%= "product_name:#{sake_log.sake.product_name}" %></p>
    <p class="font-medium mb-1"><%= "Rating:#{sake_log.rating}" %></p>
    <p class="font-medium mb-1"><%= "aroma_strength:#{sake_log.aroma_strength}" %></p>
    <p class="font-medium mb-1"><%= "taste_strength:#{sake_log.taste_strength}" %></p>
    <p class="font-medium mb-1"><%= "review:#{sake_log.review}" %></p>
  </div>
  <div>
    <% if current_user&.own?(sake_log) %>
      <%# 編集ボタン %>
      <%= link_to edit_sake_log_path(sake_log), id: "button-edit-#{sake_log.id}" do %>
        <span class="material-symbols-rounded text-primary">edit_square</span>
      <% end %>
      <%# 削除ボタン %>
      <%= link_to sake_log_path(sake_log), id: "button-delete-#{sake_log.id}", data: { turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm')} do %>
        <span class="material-symbols-rounded text-primary">delete</span>
      <% end %>
    <% end %>
  </div>
  <hr>
</div>