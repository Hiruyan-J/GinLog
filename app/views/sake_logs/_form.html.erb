<%= form_with model: sake_log do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= render 'shared/error_messages', object: f.object.sake %>

  <%# 日本酒名 %>
  <%= f.fields_for :sake do |sake_fields| %>
    <div class="my-5">
      <%= sake_fields.label :product_name %>
      <%= sake_fields.text_field :product_name %>
    </div>
  <% end %>

  <%# 好み度 %>
  <div class="my-5">
    <%= f.label :rating %>
    <div class="w-full flex justify-between items-center">
      <%# 画面左 好み度入力 %>
      <div class="rating rating-xl flex items-center gap-2">
        <%# 好み度0　%>
        <%= f.radio_button :rating, SakeLog::RATING_MIN, class: "rating-hidden", id: "rating-0", aria: { label: "clear" } %>

        <%# 好み度1〜5　%>
        <% rating_range = (SakeLog::RATING_MIN + 1)..SakeLog::RATING_MAX %>
        <% rating_range.each do |i| %>
          <%= f.radio_button :rating, i, class: "mask mask-star-2 bg-yellow-300", id: "rating-#{i}", aria: { label: "#{i} star" } %>
        <% end %>
      </div>

      <%# 画面右 クリアボタン %>
      <label for="rating-0" class= "cursor-pointer" >
        <span class="btn btn-xs btn-secondary">クリア</span>
      </label>
    </div>
  </div>

  <%# 香りの濃淡 %>
  <div class="my-5">
    <%= f.label :aroma_strength %>
    <div class="w-full ">
      <div class="px-5">
        <%= f.range_field :aroma_strength, min: 0, max: 10, step: 0.1, class: "range range-primary w-full" %>
      </div>
      <div class="flex justify-between px-7.5 mt-2 text-xs">
        <span>|</span>
        <span>|</span>
        <span>|</span>
      </div>
      <div class="flex justify-between px-2.5 mt-2 text-xs">
        <span>穏やか</span>
        <span>中間</span>
        <span>華やか</span>
      </div>
    </div>
  </div>

  <%# 味の濃淡 %>
  <div class="my-5">
    <%= f.label :taste_strength %>
    <div class="w-full ">
      <div class="px-5">
        <%= f.range_field :taste_strength, min: 0, max: 10, step: 0.1, class: "range range-primary w-full" %>
      </div>
      <div class="flex justify-between px-7.5 mt-2 text-xs">
        <span>|</span>
        <span>|</span>
        <span>|</span>
      </div>
      <div class="flex justify-between px-2.5 mt-2 text-xs">
        <span>スッキリ</span>
        <span>中間</span>
        <span>濃い</span>
      </div>
    </div>
  </div>

  <%# 感想 %>
  <div class="my-5 flex flex-col">
    <%= f.label :review %>
    <%= f.text_area :review %>
  </div>

  <%= f.submit nil, class: "btn btn-primary" %>
<% end %>
