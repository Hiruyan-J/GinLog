<header class="navbar bg-base-200 text-primary shadow-sm px-2 md:px-4 py-2 sticky top-0 z-50">
  <!-- ログイン・ログアウト -->
  <div class="navbar-start">
    <% unless user_signed_in? %>
      <!-- ログインボタン表示 -->
      <%= link_to new_user_session_path, class: "btn btn-ghost btn-sm md:btn-md text-primary flex items-center gap-1" do %>
        <span class="material-symbols-rounded ms-size-20 md:ms-size-24">login</span>
        <span><%= t('header.login') %></span>
      <% end %>
    <% else %>
      <!-- ログアウトボタン表示 -->
      <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-ghost btn-sm md:btn-md text-primary flex items-center gap-1" do %>
        <span class="material-symbols-rounded ms-size-20 md:ms-size-24">logout</span>
        <span><%= t('header.logout') %></span>
      <% end %>
    <% end %>
  </div>

  <!-- ロゴ表示 -->
  <div class="navbar-center">
    <%= link_to root_path, class: "btn btn-ghost text-primary p-0" do %>
      <%= inline_svg_tag "ginlog_logo.svg", class: "h-14 w-auto" %>
    <% end %>
  </div>

  <!-- ハンバーガーメニュー -->
  <div class="navbar-end">
    <div class="dropdown dropdown-end">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle md:btn-md text-primary">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"> <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" /> </svg>
      </div>
      <ul tabindex="-1" class="menu menu-md md:menu-lg dropdown-content bg-base-300 text-primary rounded-box z-10 mt-3 w-52 p-2 shadow">
        <li><%= link_to "home", root_path %></li>
      </ul>
    </div>
  </div>
</header>
